<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="50dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center_vertical"
        >

        <LinearLayout
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="match_parent"/>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_weight="2"
            android:layout_marginRight="@dimen/marginleft_edittextcontact"
            >

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <EditText
                    android:id="@+id/et_editAddress"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    style="@style/AppFontStyle"
                    android:hint="@string/addresshint_editcontact"
                    android:layout_toLeftOf="@+id/bt_deleteAddress"
                    />

                <Button
                    android:id="@+id/bt_deleteAddress"
                    android:layout_width="@dimen/addbutton_addresscontact"
                    android:layout_height="@dimen/addbutton_addresscontact"
                    android:background="@drawable/icn_clear"
                    android:layout_centerVertical="true"
                    style="@style/clearButton"
                    android:layout_alignParentRight="true"
                    />

            </RelativeLayout>

        </LinearLayout>

    </LinearLayout>

</LinearLayout>